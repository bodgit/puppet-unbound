
forward-zone:
	name: "<%= @zone %>"
<% if @forward_host -%>
<%   @forward_host.each do |i| -%>
	forward-host: <%= i %>
<%   end -%>
<% end -%>
<% if @forward_addr -%>
<%   @forward_addr.each do |i| -%>
	forward-addr: <%= Array(i).join('@') %>
<%   end -%>
<% end -%>
<% unless @forward_first.nil? -%>
	forward-first: <%= @forward_first ? 'yes' : 'no' %>
<% end -%>
<% unless @forward_ssl_upstream.nil? -%>
	forward-ssl-upstream: <%= @forward_ssl_upstream ? 'yes' : 'no' %>
<% end -%>
