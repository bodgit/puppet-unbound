
forward-zone:
	name: "<%= @zone %>"
<% if @host -%>
<%   @host.each do |i| -%>
	forward-host: <%= i %>
<%   end -%>
<% end -%>
<% if @addr -%>
<%   @addr.each do |i| -%>
	forward-addr: <%= Array(i).join('@') %>
<%   end -%>
<% end -%>
<% unless @first.nil? -%>
	forward-first: <%= @first ? 'yes' : 'no' %>
<% end -%>
