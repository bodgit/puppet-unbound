
stub-zone:
	name: "<%= @zone %>"
<% if @host -%>
<%   @host.each do |i| -%>
	stub-host: <%= i %>
<%   end -%>
<% end -%>
<% if @addr -%>
<%   @addr.each do |i| -%>
	stub-addr: <%= Array(i).join('@') %>
<%   end -%>
<% end -%>
<% unless @prime.nil? -%>
	stub-prime: <%= @prime ? 'yes' : 'no' %>
<% end -%>
<% unless @first.nil? -%>
	stub-first: <%= @first ? 'yes' : 'no' %>
<% end -%>
