
stub-zone:
	name: "<%= @zone %>"
<% if @stub_host -%>
<%   @stub_host.each do |i| -%>
	stub-host: <%= i %>
<%   end -%>
<% end -%>
<% if @stub_addr -%>
<%   @stub_addr.each do |i| -%>
	stub-addr: <%= Array(i).join('@') %>
<%   end -%>
<% end -%>
<% unless @stub_prime.nil? -%>
	stub-prime: <%= @stub_prime ? 'yes' : 'no' %>
<% end -%>
<% unless @stub_first.nil? -%>
	stub-first: <%= @stub_first ? 'yes' : 'no' %>
<% end -%>
<% unless @stub_ssl_upstream.nil? -%>
	stub-ssl-upstream: <%= @stub_ssl_upstream ? 'yes' : 'no' %>
<% end -%>
